<h1><%= link_to 'CMS', cms_path %> &rarr; Edit Miscellaneous Website Details</h1>

<% if @website.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@website.errors.count, "error") %> prohibited this website's settings from being saved:</h2>

    <ul>
    <% @website.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @website do |f| %>
<div class="field">
  <%= f.label :home_content %><br>
  <%= f.text_area :home_content, :class => 'ckeditor' %>
</div>
<div class="field">
  <%= f.label :terms %><br>
  <%= f.text_area :terms, :class => 'ckeditor' %>
</div>
<div class="field">
  <%= f.label :privacy_policy %><br>
  <%= f.text_area :privacy_policy, :class => 'ckeditor' %>
</div>
<div class="field">
  <%= f.submit %>
</div>
<% end %>
