<div class="page-header">
  <h1><%= link_to 'CMS', cms_path %> &rarr; Directory Advert Price</h1>
</div>

<% if @website.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@website.errors.count, "error") %> prohibited this website's settings from being saved:</h2>

    <ul>
    <% @website.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @website do |f| %>
  <div class="form-group">
    <%= f.label :directory_advert_price %>
