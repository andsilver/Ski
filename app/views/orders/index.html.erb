<%= render 'cms/menu' %>
<div class="cms">
<h1><%= link_to 'CMS', cms_path %> &rarr; Orders</h1>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Order number</th>
      <th>Placed</th>
      <th>Total</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.order_number, order %></td>
      <td><%= order.created_at %></td>
      <td class="numeric price"><%= euros_from_cents(order.total) %></td>
      <td><%= link_to order.user, order.user %></td>
      <th><%= delete_button(order) %></td>
    </tr>
<% end %>
  </tbody>
</table>
</div>
