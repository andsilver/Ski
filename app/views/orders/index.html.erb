<div class="page-header">
  <h1><%= link_to 'CMS', cms_path %> &rarr; Orders</h1>
</div>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Order number</th>
      <th>Placed</th>
      <th>Total</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.order_number, order %></td>
      <td><%= order.created_at %></td>
      <td class="numeric price"><%= gbps_from_pence(order.total) %></td>
      <td><%= link_to order.user, order.user %></td>
      <td><%= delete_button(order) %></td>
    </tr>
<% end %>
  </tbody>
</table>
