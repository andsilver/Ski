<h1><%= link_to I18n.t('advertiser_home'), advertiser_home_path %> &rarr; Receipts</h1>
<% if @orders.empty? %>
<p>You have no receipts.</p>
<% else %>
<table id="receipts">
  <thead>
    <tr>
      <th>Order number</th>
      <th>When placed</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.order_number, receipt_order_path(order.id) %></td>
      <td><%= order.created_at %></td>
      <td><%= euros_from_cents(order.total) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
