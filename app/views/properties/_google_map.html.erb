<% if lat.present? -%>
<script>
  var map;
  var marker;

  function showMap() {
    var latlng = new google.maps.LatLng(<%= lat %>, <%= lng %>);
    var myOptions = {
      zoom: 16,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    map = new google.maps.Map(document.getElementById("map-canvas"),
      myOptions);
    marker = new google.maps.Marker({
      position: latlng,
      map: map,
      title:"<%= @property.name %>"
    });
  }

  $(function() {
    showMap();
  });
</script>
<% end -%>
