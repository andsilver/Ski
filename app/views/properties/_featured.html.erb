          <li>
            <a href="<%= property_path(p) %>" class="thumbnail">
              <div>
                <% unless p.image.nil? %>
                <%= image_tag(p.image.url(144)) %>
                <% end %>
              </div>
              <p class="resort-name"><%= p.resort %></p>
              <p class="price"><%= p.for_sale? ? t('sale_price') : t('properties.weekly_price_from') %><br>
                <span><%= p.for_sale? ? format_currency(p.sale_price, p.currency) : format_currency(p.weekly_rent_price, p.currency) %></span>
              </p>
            </a>
          </li>
