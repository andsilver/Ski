<h1><%= I18n.t('my_properties_for_rent') %></h1>

<p>
  <%= link_to 'Advertise a new property for rent' %>
</p>

<% if @properties.empty? %>
<p>
  You have no properties for rent.
</p>
<% else %>
<table>
  <thead>
    <tr>
      <th><%= I18n.t('title') %></th>
      <th><%= I18n.t('distance_from_lift') %></th>
      <th><%= I18n.t('sleeps') %></th>
    </tr>
  </thead>
  <tbody>
<% @properties.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.metres_from_lift %></td>
      <td><%= p.sleeps %></td>
    </tr>
<% end %>
  </tbody>
</table>
<% end %>