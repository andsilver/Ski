<h2>Resort IDs</h2>

<table id="resort_ids">
  <tr>
    <th>resort_id</th>
    <th>Name</th>
  </tr>
<% Resort.visible.each do |resort| %>
  <tr>
    <td><%= resort.id %></td>
    <td><%= resort.name %></td>
  </tr>
<% end %>
</table>

