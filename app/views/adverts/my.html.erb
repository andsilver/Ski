<% unless @directory_adverts.empty? %>
<h2><%= I18n.t(:directory_adverts) %></h2>
<table class="grid">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= I18n.t('resort') %></th>
      <th><%= I18n.t('category') %></th>
      <th><%= I18n.t('name') %></th>
      <th><%= I18n.t('advert_status') %></th>
