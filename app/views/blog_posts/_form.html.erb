<%= form_for(@blog_post) do |f| %>
<div class="field">
  <%= f.check_box :visible %> <%= f.label :visible %>
</div>
<div class="field">
  <%= f.label :headline %><br>
  <%= f.text_field :headline %>
</div>
<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.submit %>
</div>
<% end %>
