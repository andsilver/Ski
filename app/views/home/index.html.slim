= content_for :links_and_search do
  = render 'home_search'

= content_for :carousel do
  ul#carousel-slides
    = render partial: 'carousel_slide', collection: CarouselSlide.active.order(:position)

= content_for :custom_footer do
  footer.clear-fix role="contentinfo"
    = raw @footer_box
  footer#sub-footer.clearfix
    #footer-marker
      a href="/"
        = image_tag 'marker-grey.png', alt: ''
    #footer-copyright
      p Â©2014 My Holiday Home Ventures Ltd
      ul.flat-list.flat-with-margin
        li= link_to I18n.t(:privacy), privacy_path, rel: 'nofollow'
        li= link_to I18n.t(:terms), terms_path, rel: 'nofollow'
        li= link_to I18n.t(:contact), contact_path
        li
          a href="/pages/resources" Resources
        li
          a#advertise_link href="/welcome/advertiser"= t('advertise')

- cache [@w, Date.today] do
  = raw Liquid::Template.parse(@w.home_content).render('featured_properties' => render('shared/featured_properties'))
