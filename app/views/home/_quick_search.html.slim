section
  #quick-search
    = form_tag({controller: 'properties', action: 'quick_search'}, method: 'get') do
      h2 Search
      select#country_id name="country_id"
        option value="" Choose Country
        = options_for_select(Country.with_visible_resorts.map {|c| [c, c.id]})
      br
      select#resort_id name="resort_slug"
        option value="" Choose Resort
        option value="" Choose Country First &uarr;
      br
      = render 'properties/sleeps_select'
      br
      = render 'properties/price_range_select'
      br
      = render 'home/arrival_datepicker'
      p style="text-align: right;"
        input type="submit" value="Search" class="btn btn-large btn-primary"
