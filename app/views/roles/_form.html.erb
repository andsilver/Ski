<%= form_for(@role) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <label class="checkbox"><%= f.check_box :admin %> Admin</label>

  <label class="checkbox"><%= f.check_box :select_on_signup %> Select on signup</label>

  <label class="checkbox"><%= f.check_box :advertises_properties_for_rent %> Advertises properties for rent</label>

  <label class="checkbox"><%= f.check_box :advertises_properties_for_sale %> Advertises properties for sale</label>

  <label class="checkbox"><%= f.check_box :advertises_hotels %> Advertises hotels</label>

  <label class="checkbox"><%= f.check_box :advertises_through_windows %> Advertises through windows</label>

  <label class="checkbox"><%= f.check_box :flag_new_development %> Flag new development</label>

  <label class="checkbox"><%= f.check_box :new_development_by_default %> New development by default</label>

  <label class="checkbox"><%= f.check_box :advertises_generally %> Advertises generally</label>

  <label class="checkbox"><%= f.check_box :has_business_details %> Has business details</label>

  <label class="checkbox"><%= f.check_box :has_a_website %> Has a website</label>

  <%= f.label :sales_pitch %>
  <%= editor(f, :sales_pitch, :html) %>

<div class="form-actions">
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>
