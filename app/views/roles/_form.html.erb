<%= form_for(@role) do |f| %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.check_box :admin %> <%= f.label :admin %>
</div>
<div class="field">
  <%= f.check_box :advertises_properties %> <%= f.label :advertises_properties %>
</div>
<div class="field">
  <%= f.check_box :flag_new_development %> <%= f.label :flag_new_development %>
</div>
<div class="field">
  <%= f.check_box :new_development_by_default %> <%= f.label :new_development_by_default %>
</div>
<div class="field">
  <%= f.check_box :advertises_generally %> <%= f.label :advertises_generally %>
</div>
<div class="field">
  <%= f.check_box :has_business_details %> <%= f.label :has_business_details %>
</div>
<div class="field">
  <%= f.check_box :has_a_website %> <%= f.label :has_a_website %>
</div>
<div class="field">
  <%= f.label :sales_pitch %><br>
  <%= f.text_area :sales_pitch, :class => "ckeditor" %>
</div>
<div class="field">
  <%= f.submit %>
</div>
<% end %>
