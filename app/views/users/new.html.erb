<%= render :partial => 'shared/steps', :locals => { :step => 1 } %>

<% if @user.role %>
<p><%= t 'users.account_type' %>: <strong><%= @user.role.name %></strong> (<%= link_to 'change', sign_up_path %>)</p>
<%= raw '<p>You will be able to advertise properties for rent or sale.</p>' if @user.role.advertises_properties? %>
<%= raw '<p>You will be able to create banner or directory adverts.</p>' if @user.role.advertises_generally? %>
<%= render 'form', :submit_label => 'sign_up' %>
<% else %>
<div id="user_panel_1">
  <div class="group_panel">
<p>Please choose an account type that best matches you or your business.</p>
<%= form_for @user do |f| %>
<input type="hidden" name="stage" value="1">
<p>
  <%= f.label :role_id, t('users.account_type') %> <%= select("user", "role_id", Role.where(:select_on_signup => true).collect {|r| [ r.name, r.id ] }, {:prompt => t('users.select_account_type')}) %>
</p>
<p>
  <%= f.submit t('continue') %>
</p>
<% end %>
  </div>
</div>
<% end %>
