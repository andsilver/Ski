<%= render 'cms/menu' %>
<div class="cms">
<h1><%= link_to 'CMS', cms_path %> &rarr; Users</h1>
<p><%= link_to 'New user', new_user_path, class: 'btn' %></p>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Switch User</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |u| -%>
    <tr>
      <td><%= link_to u.name, edit_user_path(u) %></td>
      <td><%= u.role.name %></td>
      <td><%= mail_to u.email, u.email %>&nbsp;</td>
      <td><%= tick u.role.admin? %></td>
      <td><%= link_to 'Switch User', switch_user_path(u.id) %></td>
      <td><%= link_to 'Delete', u, confirm: t('are_you_sure'), method: :delete %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
</div>
