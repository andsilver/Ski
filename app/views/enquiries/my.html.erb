<h1><%= link_to I18n.t('advertiser_home'), advertiser_home_path %> &rarr;
  My Enquiries</h1>

<% if @enquiries.empty? %>
<p>You have no enquiries.</p>
<% else %>
<table>
  <thead>
    <tr>
      <th>From</th>
      <th>When</th>
    </tr>
  </thead>
  <tbody>
    <% @enquiries.each do |enquiry| %>
    <tr>
      <td><%= enquiry.email %></td>
      <td><%= enquiry.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
