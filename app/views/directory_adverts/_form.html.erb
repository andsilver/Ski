<% if @directory_advert.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@directory_advert.errors.count, "error") %> prohibited this directory advert from being saved:</h2>

    <ul>
    <% @directory_advert.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @directory_advert do |f| %>

<div class="field">
  <%= label_tag 'business name' %><br>
  <%= text_field_tag 'business_name', @current_user.business_name %>
</div>

<div class="field">
  <%= label_tag 'website' %><br>
  <%= text_field_tag 'website', @current_user.website %>
</div>

<div class="field">
  <%= label_tag 'description' %><br>
  <%= text_area_tag 'description', @current_user.description %>
</div>

<div class="field">
  <%= f.label :opening_hours %><br>
  <%= f.text_area :opening_hours %>
</div>

<div class="field">
  <%= f.label :business_address %><br>
  <%= f.text_area :business_address %>
</div>

<div class="field">
  <%= f.label :postcode, 'ZIP / postcode' %><br>
  <%= f.text_field :postcode %>
</div>

<div class="field">
  <%= f.label :category_id, I18n.t('category') %><br>
  <%= select("directory_advert", "category_id", (Category.all.collect {|c| [ t(c.name), c.id ] }).sort, {:prompt => 'Select Category'}) %>
</div>

<div class="field">
  <%= f.label :resort_id, I18n.t('resort') %><br>
  <%= select("directory_advert", "resort_id", (Resort.all.collect {|r| [ r.country.name + ' > ' + r.name, r.id ] }).sort, {:prompt => 'Select Resort'}) %>
</div>

<div class="field">
  <%= f.submit(I18n.t(:save)) %>
</div>

<% end %>
