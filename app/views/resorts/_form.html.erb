      <%= select("resort", "country_id", Country.all(order: 'name').collect {|c| [ c.name, c.id ] }, {prompt: t('countries.select_country')}) %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox"><%= f.check_box :visible %> Visible</label>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox"><%= f.check_box :featured %> Featured</label>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <label class="checkbox"><%= f.check_box :summer_only %> Summer only</label>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :local_area, 'Applies to', class: 'control-label' %>
    <div class="controls">
      <%= f.select(:local_area, [["Local area", true], ["Whole area", false]],
        {selected: @resort.local_area}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :introduction, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :introduction %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :info, class: 'control-label' %>
