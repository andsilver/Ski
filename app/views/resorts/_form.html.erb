<% if @resort.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resort.errors.count, "error") %> prohibited this resort from being saved:</h2>

    <ul>
    <% @resort.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% unless @resort.new_record? %>
<div class="well">
<h2>Image</h2>
<p><%= link_to 'Change image for this resort', new_image_path %> (changes made on this page will not be saved)</p>
</div>
<% end %>

<%= form_for @resort do |f| %>
<div class="form-horizontal">
  <div class="control-group">
    <%= f.label :name, t('name'), class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country_id, t('countries.country'), class: 'control-label' %>
