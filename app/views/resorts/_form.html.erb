    <ul>
    <% @resort.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @resort do |f| %>
<p>
  <%= f.label :name, I18n.t('name') %><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :country_id, I18n.t('country') %><br>
  <%= select("resort", "country_id", Country.all.collect {|c| [ c.name, c.id ] }, {:prompt => 'Select Country'}) %>
</p>
<p>
  <%= f.label :info %><br>
  <%= f.text_area :info %>
</p>
<p>
  <%= f.submit I18n.t('save') %>
</p>
<% end %>
