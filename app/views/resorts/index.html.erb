<%= render 'cms/menu' %>
<div class="cms">
<h1><%= link_to 'CMS', cms_path %> &rarr; Resorts</h1>
<p>
  <%= link_to 'Add new resort', new_resort_path, class: 'btn' %>
</p>
<table class="table table-bordered table-striped">
<% @countries.each do |country| %>
<tr>
  <th colspan="2"><%= country.name %></th>
</tr>
<% country.resorts.each do |resort| %>
<tr>
  <td><%= link_to resort.name, resort %></td>
  <td>
    <%= edit_button(resort) %>
    <%= delete_button(resort) %>
  </td>
</tr>
<% end %>
<% end %>
</table>
</div>
