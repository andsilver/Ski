<script>
$(document).ready(function() {
  $('#gallery_thumbnails a').fancyZoom({scaleImg: true, closeOnClick: true});
});
</script>

<% resort_images(@resort, 'gallery')
if @images.empty? %>
  <p>
    <%= t('resorts_controller.gallery.no_photos') %>
  </p>
<% else %>
  <div id="gallery_thumbnails" class="thumbnails">
  <% @images.each do |i| %>
    <% t = gallery_thumbnail(@resort, i) %>
    <a href="#pic_<%= Digest::MD5.hexdigest(t) %>"><img src="<%= t %>" alt="Photo of <%= @resort %>"></a>
  <% end %>
  </div>
  <%= clear %>

  <% @images.each do |i| %>
  <div id="pic_<%= Digest::MD5.hexdigest(gallery_thumbnail(@resort, i)) %>"><img src="<%= gallery_photo(@resort, i) %>" alt="Large photo of <%= @resort %>"></div>
  <% end %>
<% end %>
