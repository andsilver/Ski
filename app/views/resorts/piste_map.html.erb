<div id="content-with-side-banners">

<% resort_images(@resort, 'piste-maps')
if @images.empty? %>
  <p>
    <%= t('resorts_controller.piste_map.no_piste_maps') %>
  </p>
<% else %>
  <% @images.each do |i| %>
    <% t = piste_map(@resort, i) %>
    <p>
      <a href="<%= piste_map_full_size_resort_path(@resort) %>?map=<%= i %>"><img src="<%= t %>" alt="Piste map for <%= @resort %>"></a>
    </p>
  <% end %>
  <%= clear %>
<% end %>

<%= raw @resort.piste_map_content %>

</div>
<div id="side-banners">
  <%= render partial: 'directory_adverts/banners', object: DirectoryAdvert.small_banners_for(@resort) %>
</div>
