<% if @currency.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@currency.errors.count, "error") %> prohibited this currency from being saved:</h2>

    <ul>
    <% @currency.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @currency do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :unit %>
  <%= f.text_field :unit %>
</div>
<div class="field">
  <label class="checkbox">
    <%= f.check_box :pre %> Unit goes before the number
  </label>
</div>
<div class="field">
  <%= f.label :code %>
  <%= f.text_field :code %>
</div>
<div class="field">
  <%= f.label :in_euros %>
  <%= f.text_field :in_euros %>
</div>
<div class="field">
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>
