<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

    <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @page do |f| %>
  <%= f.label :path %>
  <%= f.text_field :path %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :keywords %>
  <%= f.text_area :keywords %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :footer %>
  <%= select("page", "footer_id", (Footer.all.collect {|f| [ f.name, f.id ] }).sort, {prompt: 'Choose footer'}) %>

<div class="group_panel">
  <h2>Fixed Banner</h2>
    <%= f.label :fixed_banner_image_filename %>
    /public/fixed-banners/ <%= f.text_field :fixed_banner_image_filename %>

    <%= f.label :fixed_banner_target_url %>
    <%= f.text_field :fixed_banner_target_url %>
</div>
<div class="field">
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>
