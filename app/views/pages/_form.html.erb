<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

    <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @page do |f| %>
  <%= f.label :path %>
  <%= f.text_field :path %>

  <label class="checkbox">
    <%= f.check_box :visible %> Visible
  </label>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'span5' %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 3 %>

  <%= f.label :keywords %>
  <%= f.text_area :keywords, rows: 2 %>

  <%= f.label :content %>
  <%= editor(f, :content, :html) %>

  <%= f.label :footer %>
  <%= select("page", "footer_id", (Footer.all.collect {|f| [ f.name, f.id ] }).sort, {prompt: 'Choose footer'}) %>

  <%= f.label :banner_advert_html, 'Banner advert HTML' %>
  <%= editor(f, :banner_advert_html, :html) %>

  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
