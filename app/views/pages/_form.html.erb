<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

    <ul>
    <% @page.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @page do |f| %>
<div class="field">
  <%= f.label :path %><br>
  <%= f.text_field :path %>
</div>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<div class="field">
  <%= f.label :keywords %><br>
  <%= f.text_area :keywords %>
</div>
<div class="group_panel">
  <h2>Fixed Banner</h2>
  <div class="field">
    <%= f.label :fixed_banner_image_filename %><br>
    /public/fixed-banners/ <%= f.text_field :fixed_banner_image_filename %>
  </div>
  <div class="field">
    <%= f.label :fixed_banner_target_url %><br>
    <%= f.text_field :fixed_banner_target_url %>
  </div>
</div>
<div class="field">
  <%= f.submit %>
</div>
<% end %>
