<%= render 'cms/menu' %>
<div class="cms">
<h1><%= link_to 'CMS', cms_path %> &rarr; Pages</h1>
<p>
  <%= link_to 'New Page', new_page_path %>
</p>
<% if @pages.empty? %>
<p>There are no pages set up yet.</p>
<% else %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Path</th>
      <th>Title</th>
      <th>Meta OK?</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td><%= link_to page.path, edit_page_path(page) %></td>
      <td><%= page.title %></td>
      <td><%= tick_cross(!(page.description.blank? || page.keywords.blank?)) %></td>
      <td>
        <%= edit_button(page) %>
        <%= delete_button(page) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>
