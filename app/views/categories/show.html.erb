<% if @directory_adverts.empty? %>
<p>No results for <%= t(@category.name) %> in <%= @resort.name %>.</p>
<% else %>
<table id="directory_adverts">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th><%= t 'business' %></th>
      <th><%= t 'description' %></th>
      <th><%= t 'contact_details' %></th>
    </tr>
  </thead>
  <tbody>
    <% @directory_adverts.each do |da| %>
    <tr>
      <td>
      <% if da.image %>
      <div class="user_logo">
        <%= link_to_unless(da.user.description.blank?, "<img src=\"#{h(da.image.url(85))}\">".html_safe, da) %>
      </div>
      <% end %>
      </td>
      <td><%= link_to_unless(da.user.description.blank?, da.user.business_name, da) %></td>
      <td><%= da.strapline %></td>
      <td>
        <%= da.business_address %><br>
        <%= da.phone %><br>
        <%= link_to da.user.website, da.user.website %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
