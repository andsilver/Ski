<div class="page-header">
  <h1><%= link_to 'CMS', cms_path %> &rarr; Roles</h1>
</div>

<p>
  <%= link_to 'Add new role', new_admin_role_path, class: 'btn btn-secondary' %>
</p>

<table class="table table-bordered">
<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= edit_button [:admin, role] %></td>
  </tr>
<% end %>
</table>
