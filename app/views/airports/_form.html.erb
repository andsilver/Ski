<% if @airport.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@airport.errors.count, "error") %> prohibited this airport from being saved:</h2>

    <ul>
    <% @airport.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @airport do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :code %>
  <%= f.text_field :code %>
</div>
<div class="field">
  <%= f.label :country_id, t('countries.country') %>
  <%= select("airport", "country_id", Country.all(order: 'name').collect {|c| [ c.name, c.id ] }, {prompt: t('countries.select_country')}) %>
</div>
<div class="field">
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>
