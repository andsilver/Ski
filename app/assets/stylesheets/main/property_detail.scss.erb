.property {
  h1 {
    font-size: 1.2rem;
  }

  img {
    max-width: none;
  }

  .cycle-slide {
    width: 100%;
  }

  .classic-features ul {
    list-style: none;
    padding: 0;
    text-transform: uppercase;
  }
}

@media screen and (min-width: 768px) {
  .classic-images-features {

    .cycle-slideshow {
      float: left;
      width: 67%;
    }

    .classic-features {
      box-sizing: border-box;
      float: left;
      padding-left: 1rem;
      width: 33%;

      h2 {
        margin-top: 0;
      }
    }
  }

}

#features {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  font-size: 1rem;
  margin: 10px 0;
  padding: 10px 0;

  p.divider {
    clear: left;
    border-bottom: 1px solid #ccc;
  }

  .column {
    width: 140px;
    float: left;
    padding-left: 7px;
    padding-right: 8px;
    line-height: 1.5em;
  }
}

.interhome-features .column:nth-child(4n+5) {
  clear: left;
}

.ticked_feature, .unticked_feature {
  padding-left: 32px;
  background-position: 0 2px;
  background-repeat: no-repeat;
}

.ticked_feature span, .unticked_feature span {
  display: none;
}

.ticked_feature {
  background-image: url(<%= image_path('ticked-feature.png') %>);
}

.unticked_feature {
  background-image: url(<%= image_path('unticked-feature.png') %>);
}

.property-name span:first-child {
  color: #999;
}

.map-canvas {
  width: 100%;
  height: 350px;
}

p.thumbnails {
  margin: 1em 0;
  padding: 0;
}

.thumbnails img {
  margin-right: 3px;
}

p#property-thumbnails {
  height: 155px;
  overflow: auto;
  white-space: nowrap;

  img {
    max-height: 135px;
  }
}

p#property_main_image {
  float: left;
  width: 400px;
}

.abta {
  float: right;
  margin-top: 10px;
  text-align: center;
  font-size: 0.9rem;
}

.showcase {
  .header-image img {
    width: 100%;
  }

  .gallery-container, .contact-availability {
    height: 202px;
  }

  .contact-availability {
    background-color: #e9f7fc;
    padding: 5px 10px;
    position: relative;

    h1 {
      border-bottom: 1px solid #084c8d;
      color: #000;
    }
  }

  .gallery-container {
    overflow: auto;
  }

  .gallery img {
    margin: 0 4px 4px 0;
  }

  .gallery a:nth-child(3n) img {
    margin-right: 0;
  }

  .star-rating {
    position: absolute;
    bottom: 10px;
    left: 10px;
  }

  .make-a-booking {
    position: absolute;
    bottom: 10px;
    right: 10px;

    a {
      display: block;
      color: #fff;
      background: #084c8d;
      font-size: 1rem;
      line-height: 15px;
      padding: 10px 40px 10px 10px;

      span {
        position: absolute;
        right: 10px;
        top: 10px;
      }
    }
  }
}

.special-offers {
  display: block;
  height: 193px;
  overflow: auto;
  background-image: url(<%= image_path('special-offers.png') %>);
  padding: 15px 40px 15px 320px;
  margin-bottom: 10px;
}

body a.special-offers {
  color: #2b1d24;
}

.special-offers:hover {
  text-decoration: none;
}

.flip-key-property {
  h3 {
    background: transparent !important;
    color: #444;
    font-size: 15px;
    font-weight: bold;
    padding: 0;
  }

  .details li {
    display: inline-block;
    vertical-align: middle;
    zoom: 1;
    padding: 10px 55px 10px 0;
  }

  .property-details p {
    font-size: 1.1rem;
  }

  .from {
    color: #999;
    font-size: 1.1rem;
  }

  .rental-price {
    color: #333;
    font-size: 2rem;
    font-weight: bold;
  }

  .rental-price-scope {
    color: #444;
    font-size: 1.1rem;
  }

  .request-more-information {
    color: #666;
    font-size: 1.2rem;
    margin-bottom: 0;
  }

  .enquiry-dates {
    margin-top: 14px;
  }
}

#adv-custom-pager {
  border-top: 2px solid #fff;
  width: 100%;
  height: 94px;
  overflow-x: auto;
  white-space: nowrap;
}

.fk-thumb {
  border-right: 2px solid #fff;
}

.cycle-prev {
  left: 0;
}

.cycle-next {
  right: 0;
}

.cycle-prev, .cycle-next {
  background-color: #333;
  box-sizing: border-box;
  color: #fff;
  font-size: 40px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  position: absolute;
  top: calc(50% - 60px);
  width: 60px;
  opacity: 0.7;
  filter: alpha(opacity=0.5);
  z-index: 800;
  cursor: pointer;

  span {
    position: absolute;
    top: 215px;
    left: 50%;
    margin-left: -25px;
  }
}

.cycle-prev:hover, .cycle-next:hover {
  opacity: 0.9;
  filter: alpha(opacity=90);
}
