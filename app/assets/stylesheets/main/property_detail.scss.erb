.property {
  &-name {
    font-size: 3rem;
    text-align: center;
  }

  &-price {
    padding: 0.6rem 1.2rem;
    background: #002f66;
    color: white;
    text-align: center;
  }

  &-features-container {
    justify-content: flex-end;
    > div {
      width: 80%;
    }
  }

  &-features {
    margin: 24px 0;
    h2 {
      color: #002f66;
      font-style: italic;
    }
    table {
      width: 100%;
      color: black;
      td {
        padding: 12px 0;
        font-weight: bold;
      }
    }
  }

  &-details-container {
    ul {
      padding: 0;
      margin: 0;
    }

    a {
        padding: 0.5rem 1rem;
    }

    > div:first-of-type {
      align-items: flex-end;
    }

    .property-details {
      &-tabs {
        display: flex;
        margin-right: 24px;
        width: 100%;

        a {
            display: block;
        }

        > li {
          text-align: center;
          margin-right: 12px;
          flex-grow: 1;
        }

        .inactive {
          color: #002f66;
          transition: .5s ease;
        }

        @media screen and (max-width: 1200px) {
            margin-right: 0;
            flex-wrap: wrap;
            justify-content: start !important;
            > li a {
                margin-bottom: 24px;
            }
        }

        #drop_down {
            min-width: unset;
            ul {
                width: 180px;
                left: unset;
                right: 0;
                li {
                    padding: 0;
                    a {
                        font-size: 14px;
                        text-decoration: none;
                        &:hover {
                            background: #002f66;
                            color: white;
                            opacity: 1;
                        }
                    }
                }
                &::before{
                    display: none;
                }
            }
        }

      }
      &-actions {
        a {
          display: block;
          width: 200px;
          text-align: center;
        }

        @media screen and (max-width: 1200px) {
          order: -1;
          margin-bottom: 24px;
          display: flex;
          a {
              margin-bottom: 0 !important;
              margin-left: 12px;
              width: unset;
          }
        }
      }
    }

    @media screen and (max-width: 1200px) {
      > div {
        flex-direction: column;
      }
    }
  }

  img {
    max-width: none;
  }

  .cycle-slide {
    width: 100%;
  }

  .classic-features {
    .subhead {
      border-bottom: 1px solid #f1f1f1;
    }

    ul {
      color: #797979;
      list-style: none;
      padding: 0;
      text-transform: uppercase;
      li {
        line-height: 32px;
      }
    }
  }

  .get-details {
    background: #f1f1f1;
    padding: 1rem;
    margin: 2rem 0;
    label {
      color: black;
    }
  }

  &-details {

    > div:first-of-type {
      margin-right: 24px;
      flex-basis: 100%;

      @media screen and (max-width: 968px) {
        margin-right: 0;
      }
    }

    h3 {
      border-bottom: 1px solid #ccc;
      padding: 1rem 0;
      margin-bottom: 1rem;
    }

    .property-enquire {
      margin-top: 5rem;
      width: 100%;
      padding: 16px 0;
      display: block;
      text-align: center;
    }
  }
}

@media screen and (min-width: 768px) {
  .classic-images-features {

    .cycle-slideshow {
      float: left;
      width: 67%;
    }

    .classic-features {
      box-sizing: border-box;
      float: left;
      padding-left: 1rem;
      width: 33%;

      h2 {
        margin-top: 0;
      }
    }
  }

}

#features {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  font-size: 1rem;
  margin: 10px 0;
  padding: 10px 0;

  p.divider {
    clear: left;
    border-bottom: 1px solid #ccc;
  }

  .column {
    width: 140px;
    float: left;
    padding-left: 7px;
    padding-right: 8px;
    line-height: 1.5em;
  }
}

.interhome-features .column:nth-child(4n+5) {
  clear: left;
}

.ticked_feature, .unticked_feature {
  padding-left: 32px;
  background-position: 0 2px;
  background-repeat: no-repeat;
}

.ticked_feature span, .unticked_feature span {
  display: none;
}

.ticked_feature {
  background-image: url(<%= image_path('ticked-feature.png') %>);
}

.unticked_feature {
  background-image: url(<%= image_path('unticked-feature.png') %>);
}

.property-name span:first-child {
  color: #999;
}

.map-canvas {
  width: 100%;
  min-width: 700px;
  height: 350px;
}

p.thumbnails {
  margin: 1em 0;
  padding: 0;
}

.thumbnails img {
  margin-right: 3px;
}

p#property-thumbnails {
  height: 155px;
  overflow: auto;
  white-space: nowrap;

  img {
    max-height: 135px;
  }
}

p#property_main_image {
  float: left;
  width: 400px;
}

.showcase {
  .header-image img {
    width: 100%;
  }

  .gallery-container, .contact-availability {
    height: 202px;
  }

  .contact-availability {
    background-color: #e9f7fc;
    box-sizing: border-box;
    padding: 5px 10px;
    position: relative;

    h1 {
      border-bottom: 1px solid #084c8d;
      color: #000;
    }
  }

  .gallery-container {
    overflow: auto;
  }

  .gallery img {
    margin: 0 4px 4px 0;
  }

  .gallery a:nth-child(3n) img {
    margin-right: 0;
  }

  .make-a-booking a {
    position: absolute;
    bottom: 10px;
    right: 10px;
  }
}

.special-offers {
  display: block;
  height: 193px;
  overflow: auto;
  background-image: url(<%= image_path('special-offers.png') %>);
  padding: 15px 40px 15px 320px;
  margin-bottom: 10px;
}

body a.special-offers {
  color: #2b1d24;
}

.special-offers:hover {
  text-decoration: none;
}

.flip-key-property {
  h3 {
    background: transparent !important;
    color: #444;
    font-size: 15px;
    font-weight: bold;
    padding: 0;
  }

  .details li {
    display: inline-block;
    vertical-align: middle;
    zoom: 1;
    padding: 10px 55px 10px 0;
  }

  .property-details p {
    font-size: 1.1rem;
  }

  .from {
    color: #999;
    font-size: 1.1rem;
  }

  .rental-price {
    color: #333;
    font-size: 2rem;
    font-weight: bold;
  }

  .rental-price-scope {
    color: #444;
    font-size: 1.1rem;
  }

  .request-more-information {
    color: #666;
    font-size: 1.2rem;
    margin-bottom: 0;
  }

  .enquiry-dates {
    margin-top: 14px;
  }
}

#adv-custom-pager {
  border-top: 2px solid #fff;
  width: 100%;
  height: 94px;
  overflow-x: auto;
  white-space: nowrap;
}

.fk-thumb {
  border-right: 2px solid #fff;
}

.cycle-prev {
  left: 0;
}

.cycle-next {
  right: 0;
}

.cycle-prev, .cycle-next {
  background-color: #333;
  box-sizing: border-box;
  color: #fff;
  font-size: 40px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  position: absolute;
  top: calc(50% - 60px);
  width: 60px;
  opacity: 0.7;
  filter: alpha(opacity=0.5);
  z-index: 98;
  cursor: pointer;

  span {
    position: absolute;
    top: 215px;
    left: 50%;
    margin-left: -25px;
  }
}

.cycle-prev:hover, .cycle-next:hover {
  opacity: 0.9;
  filter: alpha(opacity=90);
}

.interhome-features {
  display: flex;
  justify-content: center;
  padding: 2rem 0;
}

.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: black;
  margin-right: 2.5rem;

  img {
    width: 30px;
    height: 30px;
    margin-bottom: 5px;
  }
}

.property-detail-nav {
  display: flex;
  justify-content: space-between;

  &-item {
    width: 12%;
    text-align: center;
    color: #005e9c;
    margin: 12px 16px;
    border: 1px solid #005e9c;
    padding: 4px 0;
    cursor: pointer;
    text-decoration: none;
    &.active {
      background: #005e9c;
      color: white;
    }

    a {
      color: #005e9c;
      text-decoration: none
    }

    ul li {
      padding: 10px 0;
      text-align: center;
      a {
        color: #555;
      }
      &:hover {
        background: #005e9c;
        a {
          color: white
        }
      }
    }

    @media screen and (max-width: 960px) {
      width: 25%;
      margin: 12px 4px;
    }

  }

  @media screen and (max-width: 960px) {
    flex-wrap: wrap;
  }
}
