.properties-container {
  flex-basis: 100%;
  margin-bottom: 24px;
  @media screen and (min-width: 1200px) {
    flex-basis: 60%;
  }
}

.properties-map {
  flex-basis: 100%;
  display: flex;
  min-height: 600px;
  max-height: 2000px;
  @media screen and (min-width: 1200px) {
    flex-basis: 40%;
  }
}

.property-summaries {
  display: flex;
  flex-wrap: wrap;
}

.property-summary {
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  margin: 1%;

  img {
    width: 100%;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
  }

  h3 {
    font-size: 1rem;
  }

  .actions {
    a {
      display: block;
    }

    p:first-child {
      margin-top: 0;
    }

    p:last-child {
      margin-top: 0;
    }
  }
}

.property-thumbnail {
  margin: 0;
  position: relative;
  display: block;

  .overlay {
    position: absolute;
    width: 100%;
    height: 99%;
    top: 0;
    left: 0;
    transition: 0.5s ease;
    background-color: rgba(35, 31, 32, 0.4);
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  &:hover {
    .overlay {
      background-color: rgba(35, 31, 32, 0.8);
    }
  }
}

.property-summary-description {
  padding: 0.5rem;
}

@media screen and (min-width: 640px) {
  .property-summary {
    flex-basis: 100%;
  }
}

@media screen and (min-width: 1024px) {
  .property-summary {
    flex-basis: 100%;
  }
}

@media screen and (min-width: 1200px) {
  .property-summary {
    flex-basis: 48%;
  }
}
