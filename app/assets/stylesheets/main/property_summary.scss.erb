.properties-container {
  flex-basis: 100%;
  margin-bottom: 24px;
  @media screen and (min-width: 1200px) {
    flex-basis: 60%;
  }
}

.properties-map {
  flex-basis: 100%;
  display: flex;
  min-height: 600px;
  max-height: 2000px;
  @media screen and (min-width: 1200px) {
    flex-basis: 40%;
  }
}

.property-summaries {
  display: flex;
  flex-wrap: wrap;
}

.property-summary {
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  margin: 1%;

  img {
    width: 100%;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
  }

  h3 {
    font-size: 1rem;
  }

  .actions {
    a {
      display: block;
    }

    p:first-child {
      margin-top: 0;
    }

    p:last-child {
      margin-top: 0;
    }
  }
}

.property-thumbnail {
  margin: 0;
}

.property-summary-description {
  padding: 0.5rem;
}

@media screen and (min-width: 640px) {
  .property-summary {
    flex-basis: 100%;
  }
}

@media screen and (min-width: 1024px) {
  .property-summary {
    flex-basis: 100%;
  }
}

@media screen and (min-width: 1200px) {
  .property-summary {
    flex-basis: 48%;
  }
}
