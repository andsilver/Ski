.property-summaries {
  display: flex;
  flex-wrap: wrap;
}

.property-summary {
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
  margin: 1%;

  img {
    width: 100%;
  }

  h3 {
    font-size: 1rem;
  }

  .actions {
    a {
      display: block;
    }

    p:first-child {
      margin-top: 0;
    }

    p:last-child {
      margin-top: 0;
    }
  }
}

.property-thumbnail {
  margin: 0;
}

.property-summary-description {
  padding: 0.5rem;
}

@media screen and (min-width: 640px) {
  .property-summary {
    flex-basis: 48%;
  }
}

@media screen and (min-width: 1024px) {
  .property-summary {
    flex-basis: 31.3%;
  }
}

@media screen and (min-width: 1200px) {
  .property-summary {
    flex-basis: 23%;
  }
}
