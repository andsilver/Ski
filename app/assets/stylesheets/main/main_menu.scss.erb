.main-menu {
  border-bottom: 1px solid #f2f3f3;

  ul {
    display: flex;
    list-style: none;
    padding: 0;

    > li {
      border-left: 1px solid #ecedee;
      flex-grow: 1;

      a {
        display: block;
        font-weight: normal;
        padding-left: 1rem;
        text-decoration: none;
      }
    }

    > li:first-child {
      border-left: none;
    }
  }

  .mega-parent {
    color: #231f20;
    height: 3.5rem;
    line-height: 3.5rem;
  }

  .mega-menu {
    display: none;
  }
}
