footer[role=contentinfo], .social {
  background: #ededed;
  padding-top: 1rem;
  padding-bottom: 1rem;

  .flat-list {
    list-style: none;
    padding: 0;

    li {
      margin: 0.5rem 0;
    }

    a {
      color: #606a70;
      font-weight: normal;
      text-decoration: none;
    }
  }
}

.social {
  padding: 1.5rem 0;
  margin: 0 0 1px 0;

  ul {
    justify-content: center;
  }
}
