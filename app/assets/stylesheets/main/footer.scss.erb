footer[role=contentinfo], .social {
  background: #ededed;
  padding-top: 2rem;

  ul {
    margin: 0;
  }

  .flat-list {
    list-style: none;
    padding: 0;

    li {
      margin: 1rem 0;
    }

    a {
      color: #606a70;
      font-weight: normal;
      text-decoration: none;
    }
  }

  .footer-block-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    font-size: 14px;
    margin-bottom: 2.5rem;

    .footer-block {
      flex-basis: 30%;
      p {
        color: black;
        line-height: 24px;
        margin-bottom: 2rem;
        font-size: 16px;
      }

      @media screen and (max-width: 768px) {
        flex-basis: 100% !important;
        text-align: center;
      }
    }
  }

  #footer-copyright {
    display: flex;
    justify-content: center;
    background: #fff;
    padding: 1rem 0;

    li {
      margin-right: 12px;
      font-size: 14px;
      font-weight: bold;
    }
  }

}

.social {
  padding: 1rem 0;
  margin: 0 0 1px 0;

  ul {
    justify-content: center;
  }
}
