.advertiser_info {
  p {
    padding: 0 12px;
  }

  p:first-child {
    margin-top: 0;
  }

  .column {
    display: inline;

    a {
      color: #fff;
    }

    a.advertise_now {
      color: #fff;
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: bold;
      text-align: center;
      display: block;
      position: absolute;
      left: 12px;
      top: 171px;
      width: 130px;
      height: 32px;
      line-height: 32px;

      background: #005bab; /* Old browsers */
      background: -moz-linear-gradient(top, #005bab 0%, #005bab 50%, #004b90 51%, #004b90 100%); /* FF3.6+ */
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#005bab), color-stop(50%,#005bab), color-stop(51%,#004b90), color-stop(100%,#004b90)); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(top, #005bab 0%,#005bab 50%,#004b90 51%,#004b90 100%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(top, #005bab 0%,#005bab 50%,#004b90 51%,#004b90 100%); /* Opera 11.10+ */
      background: -ms-linear-gradient(top, #005bab 0%,#005bab 50%,#004b90 51%,#004b90 100%); /* IE10+ */
      background: linear-gradient(top, #005bab 0%,#005bab 50%,#004b90 51%,#004b90 100%); /* W3C */
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#005bab', endColorstr='#004b90',GradientType=0 ); /* IE6-9 */
    }

    li {
      position: relative;
      list-style: none;
      padding-left: 24px;

      i {
        position: absolute;
        left: 0;
        top: 0;
        font-style: normal;
        color: #005cab;
      }
    }

    span {
      display: block;
      width: 466px;
      height: 181px;
    }

    table {
      padding: 0;
      margin: 12px;
    }

    td, th {
      padding: 3px 6px;
    }

    th {
      font-size: 1.1rem;
      font-weight: bold;
      vertical-align: bottom;
    }

    tr:nth-child(even) {
      background: #005cab;
      td {
        border-top: 1px solid #00b9fc;
        border-bottom: 1px solid #00b9fc;
      }
    }
  }
}

#advertiser_page h2 {
  padding: 6px 12px;
  margin-bottom: 0;
}

.advertise_info p:first-child {
  margin-top: 0;
}

.advertise_info .column .advertiser_type:first-child {
  margin-left: 0;
}

.advertiser_type, .key_point {
  color: #fff;
  float: left;
  height: 310px;
  margin-bottom: 18px;
  margin-left: 59px;
  position: relative;
  width: 224px;

  h3 {
    background: #005bab;
  }
}

.advertiser_type {
  background: #00aeef;
}

.key_point {
  background: #00aeef;
}

.key_point span {
  color: #0072bc;
  font-size: 2.5rem;
  font-weight: bold;
  position: absolute;
  top: 13px;
  right: 10px;
}

.key_point h3 {
  border-bottom: 1px solid #0072bc;
  bottom: 250px;
  left: 0;
  padding-left: 12px;
  padding-right: 41px;
  position: absolute;
  right: 0;
}

.key_point p {
  padding: 64px 12px 0 12px;
}

.advertiser_type h3, .advertiser_type p {
  margin: 0;
}

.advertiser_type h3 {
  padding: 6px 12px;
}

.advertiser_type p {
  background-repeat: no-repeat;
  padding: 98px 12px 0 12px;
}

#property_owners p {
  background-image: url(<%= image_path('advertisers-property-owners.jpg') %>);
}

#letting_agents p {
  background-image: url(<%= image_path('advertisers-letting-agents.jpg') %>);
}

#property_developers p {
  background-image: url(<%= image_path('advertisers-property-developers.jpg') %>);
}

#estate_agents p {
  background-image: url(<%= image_path('advertisers-estate-agents.jpg') %>);
}

#other_businesses p {
  background-image: url(<%= image_path('advertisers-other-businesses.jpg') %>);
}

.advertiser_type a.learn_more {
  bottom: 8px;
  color: #fff;
  font-size: 1.1rem;
  font-weight: bold;
  left: 12px;
  position: absolute;
  text-decoration: none;
}

.advertiser_type a.advertise_now {
  background: #005bab;
  bottom: 5px;
  color: #fff;
  display: block;
  font-size: 1rem;
  height: 22px;
  line-height: 22px;
  position: absolute;
  right: 12px;
  text-align: center;
  text-decoration: none;
  width: 100px;
}
