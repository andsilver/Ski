.search-container {
  background-image: url(<%= asset_path('rental-search-bg-1200.jpg') %>);
  background-size: cover;
  padding-bottom: 20vh;
  padding-top: 20vh;

  h2 {
    margin: 0;
  }

  .search {
    background: rgba(0,47,102,0.8);
    color: #fff;
    padding: 0.7rem;

    a {
      color: #fff;
    }
  }
}

.search-form {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
}

.search-field-input {
  background: #fff;
}

.search-field {

  label {
    display: block;
    font-size: 0.875rem;
    line-height: 1rem;
    margin-bottom: 0.5rem;
  }

  input[type=text], .twitter-typeahead {
    box-sizing: border-box;
    height: 2.625rem;
    outline: none;
    width: 100%;
  }

  input[type=text] {
    border: none;
    border-radius: 0;
    padding: 0.75rem;
  }

  ::placeholder {
    font-size: 14px;
  }

  select {
    -webkit-appearance: none; /* TODO: Dropdown indicator needed */
    background: #fff url('/assets/icon_arrow_down.png') no-repeat scroll right 10px center;
    border: none;
    border-radius: 0;
    cursor: pointer;
    height: 2.625rem;
    padding: 0 0.75rem;
    font-size: 14px;
    white-space: pre-line;
    border-left: 1px solid #ececec;
    border-right: 1px slid #ececec;
    &:focus, &:active {
      outline: none;
    }
    width: 150px;
  }

  select#search_countries {
    width: 200px;
  }

  .search-control {
    background: #fff;
  }

  .date-range-pick, .price-range-pick {
    height: 2.625rem;
    background: #fff;
    border-left: 1px solid #ececec;
    border-right: 1px solid #ececec;
    display: flex;
    color: #b1b1b1 !important;
    justify-content: start;
    align-items: center;
    padding: 0 12px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;
    svg {
      margin-right: 12px;
      font-size: 24px;
    }
  }
}

.search-field-destination,
.search-field-transfers-airport,
.search-field-transfers-resort{
  flex-grow: 2;
}

.search-field-submit {
  background: #fff;
  border-left: 1px solid #f3f3f3;
  box-sizing: border-box;
  flex-grow: 1;
  height: 2.625rem;
  margin-top: 1.49rem;
  padding: 0.3125rem 0.5rem 0 1rem;

  .action-button {
    width: 100%;
  }
}

div.date::after {
  top: 10px;
}

#search-options select {
  min-width: 220px;
}