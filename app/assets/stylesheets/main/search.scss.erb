#carousel-slides {
  padding: 0;
  margin: 0;
  height: 500px !important;

  li {
    width: 100%;
    height: 100%;

    img {
      width: 100%;
      height: 100%;
    }
  }

  @media screen and (max-width: 968px) {
    height: 350px !important;
  }

  @media screen and (max-width: 640px) {
    height: 250px !important;
  }
}

.search-container {
  background-image: url(<%= asset_path('rental-search-bg-1200.jpg') %>);
  background-size: cover;
  padding-bottom: 20vh;
  padding-top: 20vh;
  background-position: center;

  h2 {
    margin: 0;
  }
}

.search-container,
.search-container-carousel {
  .search {
    background: rgba(0, 47, 102, 0.8);
    color: #fff;
    padding: 0.7rem;

    a {
      color: #fff;
    }
  }
}

.search-fixed {
  position: fixed !important;
  display: block !important;
  height: unset !important;

  .search {
    z-index: 99;
    margin: 0;
  }
}

.search-container-carousel {
  position: relative;

  .search-fields {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99;

    .search {
      transition: all .4s ease;
      flex-grow: 1;
    }

    @media screen and (max-width: 768px) {
      
      .search {
        z-index: 99;
        margin: 0;
      }
    }
  }
}

.search-form {
  display: flex;
  align-items: stretch;

  @media screen and (max-width: 768px) {
    flex-wrap: wrap;

    label {
      text-align: center;
    }

    .search-field {
      &-destination {
        width: 50%;
      }

      &-bedrooms,
      &-sleeps {
        order: 2;
        width: 50%;
      }

      &-checkin-checkout {
        order: 1;
        width: 50%;
      }
    }
  }
}

.search-field-input {
  background: #fff;
}

.search-field {
  flex-grow: 1;

  label {
    display: block;
    font-size: 0.875rem;
    line-height: 1rem;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
  }

  input[type=text],
  input[type=email],
  .twitter-typeahead {
    box-sizing: border-box;
    height: 2.625rem;
    outline: none;
    width: 100%;
  }

  input[type=text],
  input[type=email] {
    border: none;
    border-radius: 0;
    padding: 0.75rem;
  }

  ::placeholder {
    font-size: 14px;
  }

  select {
    -webkit-appearance: none;
    /* TODO: Dropdown indicator needed */
    background: #fff url('/assets/icon_arrow_down.png') no-repeat scroll right 10px center;
    cursor: pointer;
    border: none;
    height: 2.625rem;
    padding: 0 0.75rem;
    font-size: 14px;
    white-space: pre-line;
    border-left: 1px solid #ececec;
    border-right: 1px slid #ececec;

    &:focus,
    &:active {
      outline: none;
    }

    width: 100%;
  }

  select#search_countries {
    width: 200px;
  }

  .search-control {
    background: #fff;
  }

  .date-range-pick,
  .price-range-pick {
    height: 2.625rem;
    background: #fff;
    border-left: 1px solid #ececec;
    border-right: 1px solid #ececec;
    display: flex;
    color: #b1b1b1 !important;
    justify-content: start;
    align-items: center;
    padding: 0 12px;
    cursor: pointer;
    font-size: 14px;
    font-weight: bold;

    svg {
      margin-right: 12px;
      font-size: 24px;
      @media screen and (max-width: 768px) {
        font-size: 16px;
      }
    }
  }

  &-submit {
    order: 99;
    background: #fff;
    border-left: 1px solid #f3f3f3;
    box-sizing: border-box;
    align-self: flex-end;
    height: 2.625rem;
    margin-top: 1.49rem;
    padding: 0.3125rem 0.5rem 0 1rem;

    .action-button {
      width: 100%;
    }
  }

}

.search-field-destination,
.search-field-transfers-airport,
.search-field-transfers-resort {
  flex-grow: 2;
}

div.date::after {
  top: 10px;
}


@media screen and (max-width: 768px) {

  .search-fields {
    position: relative !important;
  }

  .search {
    .search-field {
      
      &-submit {
        background: none;
        border: none;
        text-align: right;
        .action-button {
          width: 200px;
          border: 1px solid white;
        }
      }
    }
  }
}