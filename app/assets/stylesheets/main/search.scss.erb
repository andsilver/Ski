.search-container {
  background-image: url(<%= asset_path('rental-search-bg-1200.jpg') %>);
  background-size: cover;
  padding-bottom: 6vh;
  padding-top: 6vh;

  h2 {
    margin: 0;
  }

  .search {
    background: rgba(0,47,102,0.9);
    color: #fff;
    padding: 1rem;

    a {
      color: #fff;
    }
  }
}

.search-form {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
}

.search-field-input {
  background: #fff;
}

.search-field {
  flex-grow: 1;
  padding-top: 0.5rem;

  label {
    display: block;
    font-size: 0.875rem;
    line-height: 1rem;
    margin-bottom: 0.5rem;
  }

  input[type=text], .twitter-typeahead {
    box-sizing: border-box;
    height: 2.625rem;
    outline: none;
    width: 100%;
  }

  input[type=text] {
    border: none;
    border-radius: 0;
    padding: 0.75rem;
  }

  select {
    -webkit-appearance: none; /* TODO: Dropdown indicator needed */
    background: #fff;
    border: none;
    border-radius: 0;
    cursor: pointer;
    height: 2.625rem;
    padding: 0.75rem;
    width: 100%;
  }

  .search-control {
    background: #fff;
  }
}

.search-field-destination,
.search-field-transfers-airport,
.search-field-transfers-resort {
  flex-grow: 2;
}

.search-field-submit {
  background: #fff;
  border-left: 1px solid #f3f3f3;
  box-sizing: border-box;
  flex-grow: 1;
  height: 2.625rem;
  margin-top: 2rem;
  padding: 0.3125rem 0.5rem 0 1rem;

  .action-button {
    width: 100%;
  }
}

div.date::after {
  top: 10px;
}
