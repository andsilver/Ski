.tt-input, /* UPDATE: newer versions use tt-input instead of tt-query */
.tt-hint {
  width: 320px;
  height: 34px;
  padding: 0px 12px;
  line-height: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
}

.tt-input { /* UPDATE: newer versions use tt-input instead of tt-query */
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.tt-hint {
  color: #999;
}

.tt-menu { /* UPDATE: newer versions use tt-menu instead of tt-dropdown-menu */
  width: 320px;
  margin-top: 0px;
  padding: 8px 0;
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 4px;
  box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.tt-suggestion {
  padding: 3px 12px;
  font-size: 16px;
  line-height: 20px;
}

.tt-suggestion:hover { /* UPDATE: newer versions use .tt-suggestion.tt-cursor */
  color: #fff;
  background-color: #0097cf;

}

.tt-suggestion p {
  margin: 0;
}

.tt-suggestion .property-count {
  font-size: 14px;
  display: inline;
  float: right;
}

.tt-suggestion .property-count div {
  font-size: 12px;
  display: inline;
}

.search-datepicker {
  width: 120px;
  display: inline-block;
  float: left;
  margin-left: 4px;
}

.twitter-typeahead {
  float: left;
}

.form-submit {
  width: 100px;
  background-color: #005ea5;
  color: #eee;
  margin-left: 10px;
  float: left;
  font-weight: bold;
}

.form-submit:hover {
  background-color: #fff;
  color: #005ea5;
}

#searchBox {
  width: 970px;
}

#bloodhound {
  display: block;
  margin: 0 auto;
  padding: 10px;
  background-color: rgba(0, 94, 165, 0.3);
  height: 54px;
  width: 660px;
  border-radius: 4px;
}

#bloodhound p {
  float: left;
  color: #FFF;
  font-weight: bold;
  font-size: 26px;
  line-height: 30px;
  padding: 0 10px;
}

#holiday-type-picker {
  height: 34px;
  border: 1px solid #111;
  background: transparent;
  width: 150px;
  padding: 5px 29px 5px 5px;
  font-size: 16px;
  border: 1px solid #ccc;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  background: url('<%= asset_path('dropdown-arrow.jpg') %>') 96% / 15% no-repeat #eee;
  border-radius: 5px;
}

@media screen and (min-width:0\0) {
    #holiday-type-picker {
        background: #eee;
        padding: 5px;
    }
}
