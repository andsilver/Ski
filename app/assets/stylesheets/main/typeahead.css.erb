.tt-input,
.tt-hint {
  box-sizing: border-box;
  width: 100%;
  outline: none;
}

.tt-input {
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.tt-hint {
  color: #999;
}

.tt-menu {
  width: 320px;
  margin-top: 0px;
  padding: 8px 0;
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 4px;
  box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.tt-suggestion {
  color: #231f20;
  padding: 3px 12px;
  font-size: 1.2rem;
  line-height: 20px;
}

.tt-suggestion:hover { /* UPDATE: newer versions use .tt-suggestion.tt-cursor */
  color: #fff;
  background-color: #0097cf;

}

.tt-suggestion p {
  margin: 0;
}

.tt-suggestion .property-count {
  display: inline;
  float: right;
}

.tt-suggestion .property-count div {
  display: inline;
}

.twitter-typeahead {
  float: left;
}
