.action-button {
  background: #002f66;
  border: 1px solid #002f66;
  border-radius: 0.25rem;
  color: #fff;
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: normal;
  letter-spacing: 0.1rem;
  padding: 0.5rem;
  text-decoration: none;
  text-transform: uppercase;
}

.secondary-button {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 0.25rem;
  color: #222;
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: normal;
  letter-spacing: 0.1rem;
  padding: 0.5rem;
  text-decoration: none;
  text-transform: uppercase;
}

.secondary-button:hover {
  background: #eee;
}
