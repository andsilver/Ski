.button {
  border-radius: 0.25rem;
  box-sizing: border-box;
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: normal;
  letter-spacing: 0.1rem;
  line-height: 0.875rem;
  margin: 0;
  padding: 0.5rem;
  text-decoration: none;
  text-transform: uppercase;
}

.action-button {
  background: #002f66;
  border: 0.0625rem solid #002f66;
  color: #fff;
}

.secondary-button {
  background: #fff;
  border: 1px solid #eee;
  color: #222;
}

.secondary-button:hover {
  background: #eee;
}
