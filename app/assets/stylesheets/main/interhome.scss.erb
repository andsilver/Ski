.abta {
  display: block;
  padding: 0.5rem;
  margin: 0 0 1rem 0;
  border: 1px solid #ddd;
  font-size: 0.875rem;
  float: right;
  margin-top: 0.83rem;
}

#booking_form {
  margin-top: 3rem;
}

.interhome {
  label {
    font-weight: bold;
  }

  .form-control {
    background-color: #fff;
    box-sizing: border-box;
    display: block;
    width: 100%;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .meta, .well {
    background: #f3f3f3;
    padding: 0.5rem;
  }
}

.interhome-calendar {
  border-bottom: 0;
  width: 100%;

  td, th {
    font-size: 0.875rem;
    padding: 3px 1px;
    border-radius: 1px;
  }

  td {
    color: #fff;
    text-align: center;
  }

  th {
    background: #333;
    color: #fff;
  }

  td.empty {
    background: #fff;
  }

  td.availability-N, td.availability-unknown {
    background: #dd0000;
  }

  td.availability-Y {
    background: #009900;
    cursor: pointer;
    font-weight: bold;
  }

  td.availability-Y-no-check-in {
    background: #555;
  }

  td.availability-Q {
    background: orange;
    cursor: pointer;
    text-decoration: underline;
  }
}

.month {
  width: 33%;
  float: left;
  margin: 6px 0.3% 0 0;
  @media screen and (max-width: 968px) {
    float: none;
    width: 100%;
  }
}

.panel-section {
  padding: 24px;
  background: #eee;

  .date_pick, input {
    width: 150px;
    padding: 5px;
    border: 1px solid #ececec;
    background: white;
    position: relative;
    text-align: right;
    border-radius: 2px;
    font-size: 16px;
    font-weight: bold;
    outline: none;
  }

  .date_pick {
    cursor: pointer;
  }
}

.addtion-info {
  display: flex;
  justify-content: space-between;
  width: 66.6666667%;
  margin-right: 24px;
  @media screen and (max-width: 640px) {
    width: 100%;
  }
}

#booking_results {

  .form-group {
    margin: 1rem 0;
    label {
      color: #222;
    }
  }

  a {
    color: #005cff;
    margin: 0 3px;
    text-decoration: none;
  }

  table {
    color: #111;
    width: 100%;

    td {
      padding-bottom: 10px;
      min-width: 100px;
      line-height: 32px;
    }
  }

  #customer_address_street {
    margin-bottom: 10px;
  }

  .contact-form {
    width: 66.6666667%;
    @media screen and (max-width: 640px) {
      width: 100%;
    }
    .form-group {
      width: 100%;
      label {
        display: block;
        margin-right: 10px;
        margin-bottom: 5px;
      }
      input, select {
        width: 100%
      }
    }
  }
}

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 80px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  border-radius: 4px;
}

/* Modal Content */
.modal-content {
  position: relative;
  background-color: #fefefe;
  margin: auto;
  padding: 0;
  border: 1px solid #888;
  width: 50%;
  @media screen and (max-width: 968px) {
    width: 90%;
  }
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
  -webkit-animation-name: animatetop;
  -webkit-animation-duration: 0.4s;
  animation-name: animatetop;
  animation-duration: 0.4s
}

/* Add Animation */
@-webkit-keyframes animatetop {
  from {top:-300px; opacity:0} 
  to {top:0; opacity:1}
}

@keyframes animatetop {
  from {top:-300px; opacity:0}
  to {top:0; opacity:1}
}

/* The Close Button */
.close {
  color: white;
  float: right;
  font-size: 28px;
  font-weight: bold;
  border: none;
  background: transparent;
  outline: none;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

.modal-header {
  padding: 2px 16px;
  background-color: #002f66;
  color: white;

  h4 {
    margin: 10px 0;
    color: white;
  }
}

.modal-body {
  padding: 20px 16px;
}

.modal-footer {
  padding: 2px 16px;
  background-color: #5cb85c;
  color: white;
}

.interhome_enquiry_form {

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  > div {
    width: 48%;
    &:last-of-type {
      width: 100%;
    }
  }

  label {
    color: #222222;
    font-weight: bold;
  }

  .date_pick, input, select, textarea {
    padding: 5px;
    background-color: #f3f2e3 !important;
    position: relative;
    border-radius: 2px;
    outline: none;
    color: #010101 !important;
    font-size: 14px !important;
    font-weight: bold;
  }

  .date_pick {
    cursor: pointer;
  }

  #interhome_enquiry_submit {
    width: 200px;
  }

  textarea {
    width: 98%;
  }
}