#airport-transfers {
  height: 580px;
  background-image: url(<%= image_path('airport-transfers.jpg') %>);
  position: relative;

  .search, .search-panel {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 600px;
    height: 250px;
    padding: 10px 20px;
  }

  .search-panel {
    background: #000;
    opacity: 0.7;
  }

  td {
    padding-right: 10px;
  }

  tr + tr td {
    text-align: right;
  }

  .search {
    color: #fff;

    label, legend {
      color: #fff;
    }
  }
}

#airport_transfers {
  float: left;
  width: 756px;
}

.airport_transfer {
  .airport_thumbnail {
    margin-top: 0;
    float: left;
    padding: 0 8px 0 0;
    width: 160px;
    height: 200px;
  }

  .airport-transfer-detail {
    width: 568px;
    float: left;
    overflow: hidden;
  }
}
